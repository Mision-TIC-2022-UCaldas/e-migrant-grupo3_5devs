@model IndexModel
@{
    ViewData["Title"] = "Home page";

        }

}

<div class="text-center">
    <h1 class="display-4">Conversor de unidades</h1>
    <p>Ingrese su altura y peso</a>.</p>
</div>

<form>
  <div class="form-group">
    <label for="formGroupExampleInput">Altura</label>
    <input type="text" name="Altura" class="form-control" id="txtAltura" placeholder="Ingrese su Altura en metros">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Peso</label>
    <input type="text" name="Peso" class="form-control" id="txtPeso" placeholder="Ingrese su Peso en Kg">
  </div>
  <input class="btn btn-primary" type="submit" value="Calcular" onclick="calcularIMC()">
  <div class="form-group">
    <label for="formGroupExampleInput">Respuesta</label>
    <input type="text" readonly class="form-control" id="respuesta" >
  </div>
</form>
<script>
    let imc = 0;

    function limpiarCampos() {
      document.getElementById('txtPeso').value = "";
      document.getElementById('txtAltura').value = "";
    }

    function calcularIMC() {
      let peso = document.getElementById('txtPeso').value;
      let altura = document.getElementById('txtAltura').value;
      imc = peso / (altura * altura)
      event.preventDefault();
      limpiarCampos();
      categoriaIMC(imc);
    }

    function categoriaIMC(imc) {
      let respuesta = "";
      if(imc < 16) {
        respuesta = `Su IMC es ${imc}. Se encuentra en delgadez severa.`;
      } else if(imc >= 16 && imc <17) {
        respuesta = `Su IMC es ${imc}. Se encuentra en delgadez moderada.`;
      } else if(imc >= 17 && imc <18.5) {
        respuesta = `Su IMC es ${imc}. Se encuentra en delgadez aceptable.`;
      } else if(imc >= 18.5 && imc <25) {
        respuesta = `Su IMC es ${imc}. Se encuentra en peso normal.`;
      } else if(imc >= 25 && imc <30) {
        respuesta = `Su IMC es ${imc}. Se encuentra en sobrepeso.`;
      } else if(imc >= 30 && imc <35) {
        respuesta = `Su IMC es ${imc}. Se encuentra en obecidad tipo I.`;
      } else if(imc >= 35 && imc <40) {
        respuesta = `Su IMC es ${imc}. Se encuentra en obecidad tipo II.`;
      } else if(imc >= 40 && imc <50) {
        respuesta = `Su IMC es ${imc}. Se encuentra en obecidad tipo III morbida.`;
      } else if(imc >= 50) {
        respuesta = `Su IMC es ${imc}. Se encuentra en obecidad tipo IV o extrema.`;
    } else {
      respuesta = "Ingrese unos datos validos.";
    }
    document.getElementById('respuesta').value = respuesta;
    }
</script>