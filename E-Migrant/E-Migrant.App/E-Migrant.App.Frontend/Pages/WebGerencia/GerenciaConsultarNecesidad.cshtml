@page
@using E_Migrant.App.Dominio.Entidades;
@model E_Migrant.App.Frontend.Pages.GerenciaConsultarNecesidadModel
@{
}
<h1>Necesidades</h1>
<h2>Filtrar por:</h2>
<form>
    Filtra
    <label asp-for="filtroNecesidad">Selecciona el estado de necesidad a consultar:</label>
    <select asp-for="filtroNecesidad">
    <option value="Activo">Activos</option>
    <option value="Solucionado">Solucionados</option>
    </select>
    <button type="submit" asp-page-handler="Filtrar">Buscar</button>
</form>



<table class="table">
    <thead>
        <tr>
            <th>Tipo de necesidad</th>
            <th>descripcion</th>
            <th>nivel de prioridad</th>
            <th>estado</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            @foreach (var necesidad in Model.Necesidades)
            {
            if(@Model.filtroNecesidad!=null)
            {    
                if (necesidad.EstadoNecesidad.ToString() == @Model.filtroNecesidad)
                {
                    <tr>
                    <td>@necesidad.Categorias</td>
                    <td>@necesidad.Descripcion</td>
                    <td>@necesidad.NivelPrioridad</td>
                    <td>@necesidad.EstadoNecesidad</td>
                    </tr>
                }
                
            }else{
                 <tr>
                    <td>@necesidad.Categorias</td>
                    <td>@necesidad.Descripcion</td>
                    <td>@necesidad.NivelPrioridad</td>
                    <td>@necesidad.EstadoNecesidad</td>
                    </tr>
                }
            }
        </tr>
    </tbody>
</table>

<a class="btn btn-primary table-btn" asp-page="../WebGerencia/GerenciaConsultarNecesidad">
    <i class="bi bi-trash" aria-hidden="true"></i>
    Refrescar
</a>
<a class="btn btn-primary table-btn" asp-page="../WebGerencia/Gerencia">
    <i class="bi bi-trash" aria-hidden="true"></i>
    Volver
</a>


