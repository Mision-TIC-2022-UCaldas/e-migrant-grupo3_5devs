@page
@using E_Migrant.App.Dominio.Entidades
@model E_Migrant.App.Frontend.Pages.RegistroNecesidadModel
@{
}
<h1>Registrar Necesidades</h1>
<form method="post">
    <input type="hidden" asp-for="necesidad.Id">
    <div class="container">
        <div class="form-group col-md-6">
            <label for="inputState">Tipo de necesidad:</label>
            <select asp-for="necesidad.Categorias" placeholder="Tipo de necesidad" asp-items="Html.GetEnumSelectList<Categorias>()"
                class="form-control">
                <option value=""></option>
            </select>
            <span class="text-danger" asp-validation-for="necesidad.Categorias"></span>
        </div>
    </div>
    <div class="container">
        <div class="col">
            <label for="inputState">Descripcion</label>
            <input asp-for="necesidad.Descripcion" type="text" class="form-control" placeholder="Describa su necesidad">
            <span class="text-danger" asp-validation-for="necesidad.Descripcion"></span>
        </div>
    </div>


    <div class="container">
        <div class="form-group col-md-6">
            <label for="inputState">Nivel de prioridad:</label>
            <select asp-for="necesidad.NivelPrioridad" aria-placeholder="prioridad" asp-items="Html.GetEnumSelectList<NivelPrioridad>()"
                class="form-control">
                <option value=""></option>
            </select>
            <span class="text-danger" asp-validation-for="necesidad.NivelPrioridad"></span>
        </div>
    </div>

    <div class="form-group col-md-6">
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>

    <div class="form-group col-md-6">
        <a class="btn btn-primary table-btn" asp-page="./Migrante">
        <i class="bi bi-file-plus" aria-hidden="true"></i>
        Volver
    </a>
    </div>
    


</form>