@page
@model E_Migrant.App.Frontend.Pages.RegistroMigranteModel
@{
}
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col">
                <label for="inputState">Nombre</label>
                <input asp-for="migrante.Nombre" type="text" class="form-control" placeholder="Nombre">
            </div>
            <div class="col">
                <label for="inputState">Apellido</label>
                <input asp-for="migrante.Apellidos" type="text" class="form-control" placeholder="Apellido">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputState">Tipo de documento</label>
                <select id="inputState" class="form-control">
                    <option selected>Tipo de documento</option>
                    <option>CC</option>
                    <option>Ti</option>
                    <option>CE</option>
                    <option>PS</option>
                </select>
            </div>
            <div class="col">
                <label for="inputState">Documento</label>
                <input asp-for="migrante.NumeroDocumento" type="text" class="form-control" placeholder="Numero de documento">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Pais</label>
                <input asp-for="migrante.PaisOrigen" type="text" class="form-control" placeholder="Pais de origen">
            </div>
            <div class="col">
                <label for="inputState">Fecha</label>
                <input asp-for="migrante.FechaNacimiento" type="date" class="form-control" placeholder="fecha de nacimiento">
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Correo</label>
            <input asp-for="migrante.Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Correo electronico">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Contraseña</label>
            <input asp-for="migrante.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña">
        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Telefono</label>
                <input asp-for="migrante.Telefono" type="text" class="form-control" placeholder="Telefono">
            </div>
            <div class="col">
                <label for="inputState">Ciudad</label>
                <input asp-for="migrante.Ciudad" type="text" class="form-control" placeholder="Ciudad">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Direccion</label>
                <input asp-for="migrante.Direccion" type="text" class="form-control" placeholder="Direccion">
            </div>
            <div class="col">
                <label for="inputState">Situacion laboral</label>
                <input asp-for="migrante.SituacionLaboral" type="text" class="form-control" placeholder="Defina su situacion laboral">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>