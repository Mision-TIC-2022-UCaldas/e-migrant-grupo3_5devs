@page
@using E_Migrant.App.Dominio.Entidades
@model E_Migrant.App.Frontend.Pages.RegistroMigranteModel
@{
}
<form method="post">
    <input type="hidden" asp-for="migrante.Id">
    <div class="container">
        <div class="row">
            <div class="col">
                <label for="inputState">Nombre</label>
                <input asp-for="migrante.Nombre" type="text" class="form-control" placeholder="Nombre">
                <span class="text-danger" asp-validation-for="migrante.Nombre"></span>
            </div>
            <div class="col">
                <label for="inputState">Apellido</label>
                <input asp-for="migrante.Apellidos" type="text" class="form-control" placeholder="Apellido">
                <span class="text-danger" asp-validation-for="migrante.Apellidos"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputState">Tipo Documento:</label>
                <select asp-for="migrante.tipoDocumento" asp-items="Html.GetEnumSelectList<TipoDocumento>()"
                    class="form-control">
                </select>
                <span class="text-danger" asp-validation-for="migrante.tipoDocumento"></span>
            </div>
            <div class="col">
                <label for="inputState">Documento</label>
                <input asp-for="migrante.NumeroDocumento" type="text" class="form-control"
                    placeholder="Numero de documento">
                <span class="text-danger" asp-validation-for="migrante.NumeroDocumento"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Pais</label>
                <input asp-for="migrante.PaisOrigen" type="text" class="form-control" placeholder="Pais de origen">
                <span class="text-danger" asp-validation-for="migrante.PaisOrigen"></span>
            </div>
            <div class="col">
                <label for="inputState">Fecha</label>
                <input asp-for="migrante.FechaNacimiento" type="date" class="form-control"
                    placeholder="fecha de nacimiento">
                <span class="text-danger" asp-validation-for="migrante.FechaNacimiento"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Correo</label>
            <input asp-for="migrante.Email" type="email" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" placeholder="Correo electronico">
            <span class="text-danger" asp-validation-for="migrante.Email"></span>

        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Telefono</label>
                <input asp-for="migrante.Telefono" type="text" class="form-control" placeholder="Telefono">
            </div>
            <div class="col">
                <label for="inputState">Ciudad</label>
                <input asp-for="migrante.Ciudad" type="text" class="form-control" placeholder="Ciudad">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="inputState">Direccion</label>
                <input asp-for="migrante.Direccion" type="text" class="form-control" placeholder="Direccion">
            </div>
            <div class="col">
                <label for="inputState">Situacion laboral</label>
                <input asp-for="migrante.SituacionLaboral" type="text" class="form-control"
                    placeholder="Defina su situacion laboral">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>

</form>
