@page
@model E_Migrant.App.Frontend.Pages.ListadoUsuariosModel
@{
    
}
<h1>Lista Usuarios</h1>
<a class="btn btn-primary" asp-page="./CrearUsuario">Nuevo Usuario</a>
<br>
<br>
<table class="table">

    <head>
        <tr>
            <th scope="col">Nombre de Usuario</th>
            <th scope="col">Rol</th>
            <th scope="col">Detalles</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
            

        </tr>
    </head>
    @foreach (var u in @Model.Usuarios)
    {
        <tr>
            <td>@u.Username</td>
            <td>@u.rol</td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Detalles" asp-route-usuarioId="u.Id">
                    <i class="fas fa-info-circle"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarUsuario" asp-route-usuarioId="@u.Id">
                    <i class="far fa-edit" aria-hidden="true"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EliminarUsuario" asp-route-usuarioId="@u.Id">
                    <i class="far fa-trash-alt" aria-hidden="true"></i>
                </a>
            </td>
            
            
        </tr>
    }
</table>